---
const path = Astro.url.pathname;
const is = (p) => (p === '/' ? path === '/' : path.startsWith(p));
---
<div class="nav-inner">
  <a class="brand" href="/" aria-label="Teknical Solutionz home">
    <img src="/teknical-solutionz-logo.png" alt="Teknical Solutionz logo" style="height:42px;width:auto;border-radius:10px;" />
    <span>Teknical Solutionz</span>
  </a>

  <nav class="menu" aria-label="Primary">
    <a href="/" aria-current={is('/') ? 'page' : undefined}>Home</a>
    <a href="/services" aria-current={is('/services') ? 'page' : undefined}>Services</a>
    <a href="/about" aria-current={is('/about') ? 'page' : undefined}>About</a>
    <a href="/work" aria-current={is('/work') ? 'page' : undefined}>Outcomes</a>
    <a href="/ai-health-coach" aria-current={is('/ai-health-coach') ? 'page' : undefined}>AI Health Coach App</a>
    <a href="/contact" aria-current={is('/contact') ? 'page' : undefined}>Contact</a>
  </nav>

  <a class="btn primary" href="/contact">Get a consult</a>
</div>
