---
const links = [
  { href: '/', label: 'Home' },
  { href: '/garmin', label: 'Garmin' },
  { href: '/privacy', label: 'Privacy' },
  { href: '/data-deletion', label: 'Data deletion' },
  { href: '/terms', label: 'Terms' },
  { href: '/contact', label: 'Contact' },
];
---

<nav class="nav">
  <div class="container nav-inner">
    <a class="brand" href="/" aria-label="AI Health Coach App home">
      <img class="brand-logo" src="/healthcoachapp-icon.png" alt="AI Health Coach App logo" width="38" height="38" loading="eager" />
      <span class="brand-name">AI Health Coach App</span>
      <span class="brand-sub">by Teknical Solutionz</span>
    </a>

    <ul class="nav-links" aria-label="Primary navigation">
      {links.map((l) => (
        <li><a href={l.href}>{l.label}</a></li>
      ))}
    </ul>
  </div>
</nav>
